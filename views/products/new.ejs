<% layout("/layouts/boilerplate") %>

    <body>
        
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2 class="mb-3" >Add new product</h2>
                <form method="POST" action="/farmfresh/shop/new" novalidate class="needs-validation" enctype="multipart/form-data" >

                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="product[name]" placeholder="Enter product name" class="form-control" required>
                        <div class="invalid-feedback">Please enter valid name</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="product[image]" class="form-control" required>
                        <div class="invalid-feedback">Please enter valid image</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-5">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="product[price]" placeholder="Enter price per kg / litre"
                                class="form-control" required>
                                <div class="invalid-feedback">Please enter valid price</div>
                        </div>

                        <div class="mb-3 col-md-7">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number" name="product[quantity]" placeholder="Enter available quantity"
                                class="form-control" required>
                            <div class="invalid-feedback">Please enter valid quantity</div>
                        </div>
                    </div>

                    <!-- Product Category  -->
                    <div class="mb-2"> Enter Product Category</div>
                    <div class="btn-group mb-3" role="group" aria-label="Basic radio toggle button group">
                        <input class="btn-check" type="radio" id="vegetable" value="vegetable" name="product[category]" required>
                        <label class="btn radio-buttons" for="vegetable">Vegetable</label>

                        <input class="btn-check" type="radio" id="dairy" value="dairy" name="product[category]">
                        <label class="btn radio-buttons" for="dairy">Dairy</label>

                        <input class="btn-check" type="radio" id="vegan" value="vegan" name="product[category]">
                        <label class="btn radio-buttons" for="vegan">Vegan</label>

                        <input class="btn-check" type="radio" id="fruit" value="fruit" name="product[category]">
                        <label class="btn radio-buttons" for="fruit">Fruit</label>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <div class="invalid-feedback">Please select product category</div>
                    </div>

                    <!-- Product Unit  -->
                    <div class="mb-2"> Enter Product Unit</div>
                    <div class="btn-group mb-3" role="group" aria-label="Basic radio toggle button group">
                        <input class="btn-check" type="radio" id="kg" value="kg" name="product[unit]" required>
                        <label class="btn radio-buttons" for="kg">kg</label>

                        <input class="btn-check" type="radio" id="litre" value="litre" name="product[unit]">
                        <label class="btn radio-buttons" for="litre">litre</label>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <div class="invalid-feedback">Please select product unit</div>
                    </div>



                    <br>
                    <button class=" btn buttons" style="margin-bottom: 2rem;">Add</button>
                </form>

            </div>
        </div>
    </body>