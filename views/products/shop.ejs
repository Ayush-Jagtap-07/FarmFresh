<% layout("/layouts/boilerplate") %>

    <body>
        <div class="shop-buttons-div">
            <button onclick="showVegetables()" class="shop-button" ><i class="fa-solid fa-carrot"></i> &nbsp;Vegetables</button>
            <button onclick="showFruit()" class="shop-button" ><i class="fa-solid fa-apple-whole"></i> &nbsp;Fruits</button>
            <button onclick="showDairy()" class="shop-button" ><i class="fa-solid fa-cheese"></i> &nbsp;Dairy</button>
            <button onclick="showVegan()" class="shop-button" ><i class="fa-solid fa-seedling"></i> &nbsp;Vegan</button>
        </div>

        <div id="allVegetableProducts">
            <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 ">

                <% for(let vegetableProduct of allVegetableProducts) { %>
                    <a href="/farmfresh/shop/<%= vegetableProduct._id %>" class="product-link">
                        <div class="card col product-card">
                            <img src="<%= vegetableProduct.image.url %>" class="card-img-top" alt="product_image"
                                style="height: 20rem;">
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= vegetableProduct.name %>
                                    </b> <br>
                                    &#8377; <%= vegetableProduct.price %> 
                                    <% if (vegetableProduct.unit=="kg" ) { %>/kg  <% } else { %>/litre <% } %>
                                </p>
                            </div>
                        </div>
                    </a>
                    <% } %>

            </div>

        </div>

